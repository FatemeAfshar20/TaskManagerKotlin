<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            style="@style/HeaderTextStyle"
            android:id="@+id/tv_task_state"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:padding="@dimen/mrg_10"
            tools:text="TODO" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_task_title"
            style="@style/ItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mrg_10"
            android:layout_marginLeft="@dimen/mrg_10"
            android:layout_toEndOf="@+id/tv_task_state"
            android:layout_toRightOf="@+id/tv_task_state"
            android:padding="@dimen/mrg_10"
            tools:text="Maktab sharif" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_trashcan_admin"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/mrg_10"
            android:layout_alignParentEnd="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_task_description"
            style="@style/ItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_title"
            android:padding="@dimen/mrg_10"
            android:textStyle="italic"
            android:textColor="@color/light_gray"
            tools:text="complete final project" />

    </RelativeLayout>
</layout>